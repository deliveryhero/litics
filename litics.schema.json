{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Litics",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "events"
  ],
  "properties": {
    "components": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "parameters": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/$defs/parameters"
            }
          }
        }
      }
    },
    "events": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "supported_platforms"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "supported_platforms": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "parameters": {
            "minProperties": 1,
            "additionalProperties": {
              "$ref": "#/$defs/parameters"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "parameters": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "required"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "default": {
          "type": "string"
        },
        "example": {
        }
      }
    }
  }
}
